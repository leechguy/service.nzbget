<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.nzbget"
       name="NZBGet Control Service"
       version="0.1.0"
       provider-name="LeechGuy">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.service" library="service.py" start="startup"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Automatically pause NZBGet when starting media playback.</summary>
    <description>Automatically pause and resume NZBGet when starting and stopping media playback.</description>
    <license>GPL 2.0</license>
  </extension>
</addon>
